<main class="fullView">
  <span class="playerName"><%= game.playerBlack %></span>
  <div id="promotionDialog" class="dialog">
    <p>Choose a piece to promote your pawn:</p>
    <button data-piece="q">Queen</button>
    <button data-piece="r">Rook</button>
    <button data-piece="n">Knight</button>
    <button data-piece="b">Bishop</button>
  </div>
  <div class="boardBorder">
    <div data-opponent="<%= game.opponent %>" data-fen="<%= game.fen %>" data-gameid="<%= JSON.stringify(game._id) %>" style="width: 480px" class="board">
    </div>
  </div>
  <span class="playerName"><%= game.playerWhite %></span>
  <div class="controls">
    <a href="/games"><button id="homeBtn">BACK TO GAMES</button></a>
    <a href="/games/<%= JSON.stringify(game._id).replace(/"/g, '') %>/edit" id="editBtn"><button>EDIT BOARDSTATE</button></a>
  </div>
</main>
<script src="/show.js" defer></script>

